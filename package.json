{
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run watch\" \"npm run next-dev\"",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build": "next build ./client",
        "start": "next start ./client",
        "lint": "next lint ./client",
        "next-dev": "next dev ./client"
    },
    "devDependencies": {
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14"
    },
    "dependencies": {
        "concurrently": "^7.4.0",
        "eslint-config-next": "^13.0.2",
        "next": "^13.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
